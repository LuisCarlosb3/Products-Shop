<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <%if(error){%>
            <div class="user-message user-message--error"><%=error%></div>
        <%}%>
        <%if(message){%>
            <div class="user-message"><%=message%></div>
        <%}%>
        <form class="login-form" action="/login" method="POST">
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input class="<%=fields.includes('email') ? 'invalid':''%>" type="email" name="email" id="email" value="<%=oldInput%>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input class="<%=fields.includes('password') ? 'invalid':''%>" type="password" name="password" id="password">
            </div>
            <input type="hidden" name="_csrf" value="<%=csrfToken%>"/>
            <button class="btn" type="submit">Login</button>
        </form>
        <div class="centered">
            <a href="/reset">Reset password</a>
        </div>
    </main>
<%- include('../includes/end.ejs') %>